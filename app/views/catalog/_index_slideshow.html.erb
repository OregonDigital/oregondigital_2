<div class="item<%= ' active' if document_counter == 0 %>">
  <div class="frame">
    <%= image_tag document.derivative_paths[:medium_image].relative_path.to_s %>
      <div class="caption">
        <%= render_index_field_value document, document_show_link_field(document) %>
      </div>
      <span class="counter">
        <%= t :'blacklight_gallery.catalog.modal_slideshow.counter', counter: document_counter + 1, count: count %>
      </span>
  </div>
</div>
